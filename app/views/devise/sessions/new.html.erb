<div class="col-md-8">
    <div class="card-group">
      <div class="card p-4">
        <div class="card-body">
          <h1>Login</h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <p class="text-muted">Sign In to your account</p>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="icon-user"></i>
              </span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email" %>
          </div>
          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="icon-lock"></i>
              </span>
            </div>
            <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: "Password" %>
          </div>
          <div class="row">
            <div class="col-6">
              
              <%= f.submit "Log in", class: "btn btn-primary px-4" %>
            </div>
            <div class="col-6 text-right">
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "btn btn-link px-0" %><br />
            </div>
          </div>
          <% end %>

        </div>
      </div>
      <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
        <div class="card-body text-center">
          <div>
            <h2>Sign up</h2>
            <p>If you don't have any account, please try to singup here.</p>
            <%= link_to "Register Now!", new_registration_path(resource_name), class: "btn btn-primary active mt-3" %><br />
          </div>
        </div>
      </div>
    </div>
  </div>